@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Chi tiết đơn hàng";
    decimal total = 0;
    decimal subtotal = 0;
}
@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/orders" class="nav-link">Chi tiết đơn hàng @ViewData["OrderCode"]</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách đặt hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                    <li class="breadcrumb-item active">Chi tiết đơn hàng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">

    <!-- Default box -->
    <div class="card">

        <div class="card-body">
            <table class=" table table-hover">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>                   
                        <th>Tên khách hàng</th>
                        <th>Giá sản phẩm</th>
                        <th>Số lượng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            subtotal = item.Quantity * item.Price;
                            total += subtotal;
                            <tr>
                                <input type="hidden" asp-for="@item.OrderCode" class="getId" />
                                <td>@item.Product.Name</td>
                                <td>@item.UserName</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td>@subtotal.ToString("C")</td>
                            </tr>
                        }
                    }
                    <tr>
                        <th colspan="5">Tổng: </th>
                        <td>@total.ToString("C")</td>
                        <td>
                            <select class="fỏm-control select-update-order">
                                <option value="1">Đơn hàng mới</option>
                                <option value="0">Đã xử lý</option>
                            </select>
                        </td>
                    </tr>                  
                </tbody>
            </table>
        </div>
    </div>
</section>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('.select-update-order').change(function () {
                var status = $(this).val();
                var ordercode = $('.getId').val();


                $.ajax({
                    type: "POST",
                    url: "@Url.Action("UpdateOrder")", // Đảm bảo URL chính xác
                    data: { status: status, ordercode: ordercode },
                    success: function (result) {
                        if (result.success) {
                            // Hiển thị thông báo thành công
                            Swal.fire("Cập nhật đơn hàng thành công.")
                                .then(() => {
                                    // Sau khi đóng thông báo, chuyển hướng về trang Index
                                    window.location.href = result.redirectUrl;
                                });
                        } else {
                            Swal.fire("Cập nhật đơn hàng thất bại! " + result.message);
                        }
                    },
                    error: function (req, status, error) {
                        console.log("Lỗi cập nhật đơn hàng", error);
                    }
                });
            });
        });
    </script>
}